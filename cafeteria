    <script>
        // Menu Data
        const menuData = {
            cafes_frios: {
                icon: 'fa-snowflake',
                color: 'blue',
                items: [
                    { name: 'Moka', price: 55, description: 'Caf√© con chocolate y leche fr√≠a' },
                    { name: 'Chocolate', price: 50, description: 'Bebida de chocolate fr√≠o' },
                    { name: 'Frappuccino', price: 55, description: 'Caf√© helado estilo frappe' },
                    { name: 'Caramelo', price: 55, description: 'Caf√© fr√≠o con caramelo' },
                    { name: 'Cajeta', price: 58, description: 'Caf√© fr√≠o con cajeta' },
                    { name: 'Especial', price: 65, description: 'Mezcla especial de la casa' },
                    { name: 'Caramel', price: 55, description: 'Caf√© con notas de caramelo' }
                ]
            },
            cafes_calientes: {
                icon: 'fa-mug-hot',
                color: 'orange',
                items: [
                    { name: 'Chocolate', price: 45, description: 'Chocolate caliente tradicional' },
                    { name: 'Expreso', price: 30, description: 'Caf√© expreso intenso' },
                    { name: 'Americano', price: 35, description: 'Caf√© americano' },
                    { name: 'Negro', price: 30, description: 'Caf√© negro tradicional' },
                    { name: 'Cappuccino', price: 45, description: 'Caf√© con espuma de leche' },
                    { name: 'Macchiato', price: 45, description: 'Caf√© con toque de leche' },
                    { name: 'Bomb√≥n', price: 50, description: 'Caf√© con leche condensada' },
                    { name: 'Late', price: 48, description: 'Caf√© con leche cremosa' }
                ]
            },
            crepas_sencillas: {
                icon: 'fa-circle',
                color: 'pink',
                items: [
                    { name: 'Zarzamora', price: 45, description: 'Crepa con mermelada de zarzamora' },
                    { name: 'Philadelphia', price: 45, description: 'Crepa con queso crema' },
                    { name: 'Nutella', price: 55, description: 'Crepa con Nutella' },
                    { name: 'Cajeta', price: 45, description: 'Crepa con cajeta tradicional' },
                    { name: 'Frambuesa', price: 45, description: 'Crepa con frambuesas' },
                    { name: 'Fresa', price: 40, description: 'Crepa con fresas frescas' },
                    { name: 'Hawaiana', price: 50, description: 'Crepa con jam√≥n y queso tipo hawaiano' },
                    { name: 'Queso de Bola', price: 50, description: 'Crepa con queso de bola edam' }
                ]
            },
            crepas_bubbles: {
                icon: 'fa-star',
                color: 'purple',
                items: [
                    { name: 'Zarzamora con Philadelphia', price: 65, description: 'Combinaci√≥n perfecta de zarzamora y queso' },
                    { name: 'Kinder D√©lice', price: 75, description: 'Con chocolate Kinder D√©lice' },
                    { name: 'Queso con Kinder', price: 75, description: 'Mezcla de queso y chocolate Kinder' },
                    { name: 'Oreo', price: 70, description: 'Con galletas Oreo trituradas' },
                    { name: 'Con Helado', price: 80, description: 'Crepa acompa√±ada de helado' }
                ]
            }
        };

        let cart = [];
        let currentCategory = 'cafes_frios';

        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            renderCategories();
            renderMenu();
        });

        function renderCategories() {
            const nav = document.getElementById('category-nav');
            const categories = {
                'cafes_frios': 'Caf√©s Fr√≠os ‚ùÑÔ∏è',
                'cafes_calientes': 'Caf√©s Calientes ‚òï',
                'crepas_sencillas': 'Crepas Sencillas ü•û',
                'crepas_bubbles': 'Crepas Bubbles ‚≠ê'
            };

            nav.innerHTML = Object.entries(categories).map(([key, label]) => `
                <button onclick="switchCategory('${key}')" 
                    class="category-btn px-6 py-2 rounded-full font-medium transition-all whitespace-nowrap ${currentCategory === key ? 'bg-amber-700 text-white shadow-lg transform scale-105' : 'bg-white text-gray-700 hover:bg-amber-100 border border-gray-200'}">
                    ${label}
                </button>
            `).join('');
        }

        function switchCategory(category) {
            currentCategory = category;
            renderCategories();
            renderMenu();
        }

        function renderMenu() {
            const grid = document.getElementById('menu-grid');
            const category = menuData[currentCategory];
            
            grid.innerHTML = category.items.map((item, index) => `
                <div class="item-card bg-white rounded-2xl shadow-md overflow-hidden border border-gray-100" style="animation: fadeIn 0.5s ease-out ${index * 0.1}s both;">
                    <div class="h-32 bg-gradient-to-br from-${category.color}-100 to-${category.color}-200 flex items-center justify-center">
                        <i class="fas ${category.icon} text-4xl text-${category.color}-600 opacity-50"></i>
                    </div>
                    <div class="p-5">
                        <div class="flex justify-between items-start mb-2">
                            <h3 class="font-bold text-lg text-gray-900">${item.name}</h3>
                            <span class="text-xl font-bold text-amber-700">$${item.price}</span>
                        </div>
                        <p class="text-sm text-gray-500 mb-4">${item.description}</p>
                        <button onclick="addToCart('${item.name}', ${item.price})" 
                            class="w-full bg-gray-900 hover:bg-amber-700 text-white font-medium py-2 px-4 rounded-lg transition-colors flex items-center justify-center space-x-2 group">
                            <i class="fas fa-plus transition-transform group-hover:rotate-90"></i>
                            <span>Agregar al pedido</span>
                        </button>
                    </div>
                </div>
            `).join('');
        }

        function addToCart(name, price) {
            const existingItem = cart.find(item => item.name === name);
            if (existingItem) {
                existingItem.quantity++;
            } else {
                cart.push({ name, price, quantity: 1 });
            }
            updateCart();
            
            // Visual feedback
            const badge = document.getElementById('cart-badge');
            badge.classList.add('scale-125');
            setTimeout(() => badge.classList.remove('scale-125'), 200);
        }

        function removeFromCart(index) {
            cart.splice(index, 1);
            updateCart();
        }

        function updateQuantity(index, delta) {
            cart[index].quantity += delta;
            if (cart[index].quantity <= 0) {
                removeFromCart(index);
            } else {
                updateCart();
            }
        }

        function updateCart() {
            const cartItems = document.getElementById('cart-items');
            const cartBadge = document.getElementById('cart-badge');
            const cartTotal = document.getElementById('cart-total');
            const sendBtn = document.getElementById('send-btn');

            // Update badge
            const totalItems = cart.reduce((sum, item) => sum + item.quantity, 0);
            if (totalItems > 0) {
                cartBadge.textContent = totalItems;
                cartBadge.classList.remove('hidden');
                sendBtn.disabled = false;
            } else {
                cartBadge.classList.add('hidden');
                sendBtn.disabled = true;
            }

            // Update cart items
            if (cart.length === 0) {
                cartItems.innerHTML = '<p class="text-center text-gray-500 py-8">Tu carrito est√° vac√≠o</p>';
                cartTotal.textContent = '$0.00';
                return;
            }

            cartItems.innerHTML = cart.map((item, index) => `
                <div class="flex items-center justify-between bg-gray-50 p-4 rounded-lg animate-slide-in">
                    <div class="flex-1">
                        <h4 class="font-semibold text-gray-900">${item.name}</h4>
                        <p class="text-sm text-gray-500">$${item.price} c/u</p>
                    </div>
                    <div class="flex items-center space-x-3">
                        <button onclick="updateQuantity(${index}, -1)" class="w-8 h-8 rounded-full bg-gray-200 hover:bg-gray-300 flex items-center justify-center transition-colors">
                            <i class="fas fa-minus text-xs"></i>
                        </button>
                        <span class="font-semibold w-4 text-center">${item.quantity}</span>
                        <button onclick="updateQuantity(${index}, 1)" class="w-8 h-8 rounded-full bg-amber-100 hover:bg-amber-200 text-amber-700 flex items-center justify-center transition-colors">
                            <i class="fas fa-plus text-xs"></i>
                        </button>
                    </div>
                </div>
            `).join('');

            // Update total
            const total = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
            cartTotal.textContent = `$${total.toFixed(2)}`;
        }

        function toggleCart() {
            const sidebar = document.getElementById('cart-sidebar');
            const panel = document.getElementById('cart-panel');
            
            if (sidebar.classList.contains('hidden')) {
                sidebar.classList.remove('hidden');
                setTimeout(() => {
                    panel.classList.remove('translate-x-full');
                }, 10);
            } else {
                panel.classList.add('translate-x-full');
                setTimeout(() => {
                    sidebar.classList.add('hidden');
                }, 300);
            }
        }

        function sendOrder() {
            const name = document.getElementById('customer-name').value.trim();
            const notes = document.getElementById('customer-notes').value.trim();
            
            if (!name) {
                alert('Por favor ingresa tu nombre');
                return;
            }

            let message = `¬°Hola! Quiero hacer un pedido:\n\n`;
            message += `*Cliente:* ${name}\n\n`;
            message += `*Pedido:*\n`;
            
            let total = 0;
            cart.forEach(item => {
                const subtotal = item.price * item.quantity;
                total += subtotal;
                message += `‚Ä¢ ${item.quantity}x ${item.name} - $${subtotal.toFixed(2)}\n`;
            });
            
            message += `\n*Total: $${total.toFixed(2)}*\n`;
            
            if (notes) {
                message += `\n*Notas:* ${notes}`;
            }

            // N√öMERO FICTICIO PARA DEMO: 55 1234 5678 (M√©xico +52)
            const phoneNumber = '5215512345678';
            const whatsappUrl = `https://wa.me/${phoneNumber}?text=${encodeURIComponent(message)}`;
            
            // Mostrar el enlace generado en el modal para demostraci√≥n
            document.getElementById('demo-link').textContent = whatsappUrl;
            document.getElementById('success-modal').classList.remove('hidden');
            
            // En una implementaci√≥n real, aqu√≠ se har√≠a:
            // window.open(whatsappUrl, '_blank');
        }

        function closeSuccessModal() {
            document.getElementById('success-modal').classList.add('hidden');
            cart = [];
            updateCart();
            toggleCart();
            document.getElementById('customer-name').value = '';
            document.getElementById('customer-notes').value = '';
        }
    </script>
</body>
</html>
